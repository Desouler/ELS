{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf --glob dist/*",
    "start": "nodemon --inspect dist/index.js",
    "startWatch": "npm run debug",
    "build": "npm run clean && npm run build-ts && npm run eslint && npm run copy-static-assets",
    "serve": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "eslint": "eslint",
    "copy-static-assets": "ts-node tools/copyAssets",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect=11009 dist/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "typeorm": "node -r dotenv/config --require ts-node/register ./node_modules/typeorm/cli.js -d ./src/data-source.ts"
  },
